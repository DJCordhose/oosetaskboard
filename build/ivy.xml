<ivy-module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:m="http://ant.apache.org/ivy/maven"
    version="2.0"
    xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd" >

    <info
        module="gwt-test"
        organisation="de.oose" >

        <ivyauthor
            name="oose Innovative Informatik"
            url="http://www.oose.de" />
    </info>

    <configurations>

        <conf
            name="default"
            extends="master"
            visibility="public" />

        <conf
            name="master"
            visibility="public" />

        <conf
            name="test"
            visibility="public" />
    </configurations>

    <dependencies>

        <!-- Dozer DTO mapping dependencies -->

        <dependency
            name="dozer"
            conf="master->default(*)"
            org="net.sf.dozer"
            rev="${dozer.version}" />

        <!-- Derby dependencies -->

        <dependency
            name="derby"
            conf="master->default(*)"
            org="org.apache.derby"
            rev="${derby.version}" />

        <dependency
            name="hsqldb"
            conf="master->default(*)"
            org="org.hsqldb"
            rev="2.2.8" />

        <!-- Hibernate dependencies -->

        <dependency
            name="hibernate-core"
            conf="master->default(*)"
            org="org.hibernate"
            rev="${hibernate.core.version}" />

        <dependency
            name="hibernate-entitymanager"
            conf="master->default(*)"
            org="org.hibernate"
            rev="${hibernate.core.version}" />

        <dependency
            name="hibernate-validator"
            conf="master->default(*)"
            org="org.hibernate"
            rev="4.2.0.Final" />

        <!-- Guice dependencies -->

        <dependency
            name="guice"
            conf="master->default(*)"
            org="com.google.inject"
            rev="${com.google.guice.version}" >

            <exclude org="org.sonatype.sisu.inject">
            </exclude>
        </dependency>

        <dependency
            name="guice-persist"
            conf="master->default(*)"
            org="com.google.inject.extensions"
            rev="${com.google.guice.version}" />

        <dependency
            name="guice-servlet"
            conf="master->default(*)"
            org="com.google.inject.extensions"
            rev="${com.google.guice.version}" />

        <!-- GWT Platform -->

        <dependency
            name="gwtp-mvp-client"
            conf="master->default(*)"
            org="com.gwtplatform"
            rev="${gwtp.version}" />

        <dependency
            name="gwtp-dispatch-client"
            conf="master->default(*)"
            org="com.gwtplatform"
            rev="${gwtp.version}" />

        <dependency
            name="gwtp-dispatch-server-guice"
            conf="master->default(*)"
            org="com.gwtplatform"
            rev="${gwtp.version}" />

        <dependency
            name="gin"
            conf="master->default(*)"
            org="com.google.gwt.inject"
            rev="1.5.0" >

            <exclude name="gwt-servlet" />
        </dependency>

        <!-- Validation API -->

        <dependency
            name="validation-api"
            conf="master->default(*)"
            org="javax.validation"
            rev="${validation-api.version}" >

            <artifact name="validation-api" />

            <artifact
                name="validation-api"
                m:classifier="sources" />
        </dependency>

        <!-- logging framework -->

        <dependency
            name="logback-classic"
            conf="master->default(*);test->default(*)"
            org="ch.qos.logback"
            rev="${logback.version}" />

        <!-- Those dependencies are our test stuff -->

        <dependency
            name="selenium-java"
            conf="test->default(*)"
            org="org.seleniumhq.selenium"
            rev="${selenium.version}" />

        <dependency
            name="hamcrest-all"
            conf="test->default(*)"
            org="org.hamcrest"
            rev="${hamcrest.version}" />

        <!--
             override transitive dependencies with correct versions of google gwt 
			and guice
        -->

        <override
            org="com.google.inject"
            rev="${com.google.guice.version}" />

        <override
            org="com.google.inject.extensions"
            rev="${com.google.guice.version}" />
        <!-- override sl4j versions with the latest -->

        <override
            org="org.slf4j"
            rev="${slf4j.version}" />
    </dependencies>

</ivy-module>